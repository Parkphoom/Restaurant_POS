<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MainActivity"
    tools:context=".MainActivity">


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/header_layout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/menu_btn"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/icons8_squared_menu_48px"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <Button
            android:id="@+id/cart_btn"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icons8_shopping_cart_100px"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/thaibaht"
            android:textAlignment="center"
            android:textSize="@dimen/txt_size_rvitem_name_L" />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/header_layout"
        android:layout_height="wrap_content"
        android:id="@+id/rvNamerest"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFoodmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvNamerest"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" />

</RelativeLayout>